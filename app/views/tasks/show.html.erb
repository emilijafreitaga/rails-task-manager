<h1><%= @task.title %></h1>

<div>
  <%= @task.details %>
</div>

<div class="form-check" >
    <% if @task.completed == true %>
    <input type='checkbox' class='form-check-input' value='' id="flexCheckChecked" checked>
     Completed
    <% elsif @task.completed == false %>
      <input type='checkbox' class='form-check-input' value='' id="flexCheckChecked">
      Not completed
    <% end %>
  </label>
</div>


<%= link_to 'Back to list', tasks_path %>
<%= link_to 'Edit a task', edit_task_path(@task) %>
<%= link_to "Delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
