<div class="container">
  <h1> My Tasks</h1>

    <% @tasks.each do |task| %>
      <% if task.completed %>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" checked>
        </div>
      <% else %>
        <div class="form-check">
          <input class="form-check-input" type="checkbox">
        </div>
      <% end %>
          <%= link_to task.title, task_path(task) %>
    <% end %>


  <br>
  <%= link_to 'Add a new task', tasks_new_path %>

</div>
